<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.martoraneca.challengegenerator.view.DetailActivity">

    <ImageView
        android:id="@+id/detail_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/RED"
        android:layout_above="@+id/detail_center"
        android:contentDescription="@string/desc" />

    <TextView
        android:id="@+id/detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_10_minutes"
        android:textSize="22sp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="16dp"
        android:layout_above="@id/detail_center"
        />

    <View
        android:id="@+id/detail_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"

        />

    <TextView
        android:id="@+id/detail_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wash_the_dishes"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="16dp"
        android:layout_below="@id/detail_center"
        />

</RelativeLayout>
